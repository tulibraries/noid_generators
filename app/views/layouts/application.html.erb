<!DOCTYPE html>
<html>
  <head>
    <title>NoidGenerators</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header container">
      <div class="row" id="header">
        <div class="col col-10">
          <h1>Special Collections Research Center</h1>
        </div>
        <div class="col col-2">
          <% if logged_in? %>
            <%= button_to "Logout", '/logout', method: :get, class: "btn btn-primary" %>
          <% else %>
            <% unless request.env['PATH_INFO'] == "/login" %>
              <%= button_to "Login", '/login', method: :get, class: "btn btn-primary" %>
            <% end %>
          <% end %>
        </div>
      </div>
      <% unless notice.blank? %>
        <div class="row">
          <div class="col text-center">
            <p id="notice" class="h2"><%= notice %></p>
          </div>
        </div>
      <% end %>

      <div class="yield container">

        <%= yield %>

      </div>
    
    </div>  
  </body>
</html>
